{% extends 'base.html.twig' %}
{% block title %}{{ subcategory.name }}{% endblock %}
{% block body %}
    <table class="table table-hover">
        {% for product in products %}
            <tr>
                <td><a href="{{ path('show_product', {'categoryName':category.name, 'subcategoryName':subcategory.name, 'productCode':product.code}) }}">{{ product.name }}</a></td>
            </tr>
            <tr>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <td>{{ product.description }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
